<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/single_margin"
    android:background="?selectableItemBackground"
    android:paddingHorizontal="@dimen/single_margin">

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.AppTheme.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A place" />

    <TextView
        android:id="@+id/sub_title"
        style="@style/TextAppearance.AppTheme.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="33 Place drive, Brooklyn NY" />
</androidx.constraintlayout.widget.ConstraintLayout>
